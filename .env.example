# Educational RAG System - Environment Variables
# Copy this file to .env and fill in your API keys

# =============================================================================
# API KEYS (Optional - for enhanced features)
# =============================================================================

# OpenAI API Key (for advanced language models)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Groq API Key (for advanced language models)
GROQ_API_KEY=_____________api___key__ggskk_9kJLNxjFRiMxc3HHjienWGdyb3FYzYe2sOC5npAUzYsCtMtpDn6x
# HuggingFace API Key (for model downloads and API access)
# Get your key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL for production deployment
# For local development, SQLite is used by default
DATABASE_URL=sqlite:///educational_rag.db

# Vector Database Configuration
VECTOR_DB_PERSIST_DIRECTORY=./vector_db
VECTOR_DB_COLLECTION_NAME=educational_content

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================

# Debug mode (True for development, False for production)
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Application host and port for deployment
HOST=0.0.0.0
PORT=8501

# =============================================================================
# CONTENT PROCESSING SETTINGS
# =============================================================================

# Chunk size for content processing (in tokens)
CHUNK_SIZE=512

# Chunk overlap percentage
CHUNK_OVERLAP=102

# Maximum number of chunks per content item
MAX_CHUNKS_PER_ITEM=50

# =============================================================================
# EMBEDDING MODEL SETTINGS
# =============================================================================

# Embedding model name from sentence-transformers
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Embedding dimension (auto-detected if not specified)
EMBEDDING_DIMENSION=384

# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# RETRIEVAL SETTINGS
# =============================================================================

# Default number of results to return
DEFAULT_TOP_K=5

# Maximum number of results allowed
MAX_TOP_K=50

# Similarity threshold for filtering results
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# LEARNING PATH SETTINGS
# =============================================================================

# Maximum learning path length
MAX_PATH_LENGTH=30

# Minimum learning path length
MIN_PATH_LENGTH=3

# Default difficulty progression rate
DIFFICULTY_PROGRESSION_RATE=0.1

# =============================================================================
# STUDENT PROFILE SETTINGS
# =============================================================================

# Mastery threshold for skill completion
MASTERY_THRESHOLD=0.8

# Learning streak reset time (hours)
STREAK_RESET_TIME=36

# Maximum number of knowledge gaps to track
MAX_KNOWLEDGE_GAPS=10

# =============================================================================
# PROGRESS TRACKING SETTINGS
# =============================================================================

# Session timeout (minutes)
SESSION_TIMEOUT=60

# Progress snapshot interval (hours)
PROGRESS_SNAPSHOT_INTERVAL=24

# Analytics time window (days)
ANALYTICS_TIME_WINDOW=30

# =============================================================================
# UI/UX SETTINGS
# =============================================================================

# Application theme (light, dark, auto)
THEME=auto

# Items per page for paginated results
ITEMS_PER_PAGE=10

# Chart refresh interval (seconds)
CHART_REFRESH_INTERVAL=30

# =============================================================================
# SECURITY SETTINGS (for production deployment)
# =============================================================================

# Secret key for session management
SECRET_KEY=your_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Rate limiting (requests per minute per IP)
RATE_LIMIT=100

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application URL (for external integrations)
APP_URL=http://localhost:8501

# CDN URL for static assets (optional)
CDN_URL=

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Analytics tracking ID (Google Analytics, etc.)
ANALYTICS_ID=

# Error reporting service (Sentry DSN)
SENTRY_DSN=

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=False

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Email service configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=True

# Webhook URLs for integrations
WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Third-party LMS integration
LMS_API_KEY=
LMS_BASE_URL=

# =============================================================================
# CONTENT SOURCES
# =============================================================================

# External content sources (APIs, URLs)
CONTENT_API_ENDPOINTS=

# Content update schedule (cron format)
CONTENT_UPDATE_SCHEDULE=0 2 * * *

# Maximum content age before refresh (days)
MAX_CONTENT_AGE=30

# =============================================================================
# CACHING SETTINGS
# =============================================================================

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# Cache TTL (seconds)
CACHE_TTL=3600

# Enable query result caching
ENABLE_QUERY_CACHE=True

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup storage location
BACKUP_LOCATION=./backups

# Backup frequency (hours)
BACKUP_FREQUENCY=24

# Number of backups to retain
BACKUP_RETENTION_COUNT=7

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable advanced analytics
ENABLE_ADVANCED_ANALYTICS=True

# Enable gamification features
ENABLE_GAMIFICATION=True

# Enable collaborative learning
ENABLE_COLLABORATION=False

# Enable content recommendations
ENABLE_RECOMMENDATIONS=True

# Enable progress predictions
ENABLE_PROGRESS_PREDICTION=False

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum concurrent users
MAX_CONCURRENT_USERS=100

# Query timeout (seconds)
QUERY_TIMEOUT=30

# Memory limit per user session (MB)
MEMORY_LIMIT_PER_SESSION=256

# Enable result pagination
ENABLE_PAGINATION=True

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable debug toolbar
ENABLE_DEBUG_TOOLBAR=False

# Enable API documentation
ENABLE_API_DOCS=True

# Enable performance profiling
ENABLE_PROFILING=False

# Test data generation
GENERATE_TEST_DATA=False

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,de,zh

# Timezone
TIMEZONE=UTC

# =============================================================================
# ACCESSIBILITY
# =============================================================================

# Enable accessibility features
ENABLE_ACCESSIBILITY=True

# Screen reader support
ENABLE_SCREEN_READER=True

# High contrast mode available
ENABLE_HIGH_CONTRAST=True

# =============================================================================
# EXAMPLE VALUES (Remove in production)
# =============================================================================

# Example OpenAI API key format:
# OPENAI_API_KEY=sk-1234567890abcdef1234567890abcdef1234567890abcdef

# Example HuggingFace token format:
# HUGGINGFACE_API_KEY=hf_1234567890abcdef1234567890abcdef1234567890

# Example database URL formats:
# DATABASE_URL=postgresql://user:pass@localhost:5432/educational_rag
# DATABASE_URL=mysql://user:pass@localhost:3306/educational_rag
# DATABASE_URL=sqlite:///./educational_rag.db

# =============================================================================
# NOTES
# =============================================================================

# 1. This file contains all possible configuration options
# 2. Most options have sensible defaults and are optional
# 3. Only API keys might be needed for basic functionality
# 4. For production deployment, review security settings
# 5. Environment-specific settings should be customized
# 6. Keep this file secure and never commit it to version control
# 7. Use strong, unique values for all secret keys and passwords